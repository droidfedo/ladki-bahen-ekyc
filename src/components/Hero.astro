---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section class="relative bg-gradient-to-br from-primary-50 via-white to-secondary-50 py-20 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  <div class="absolute top-0 right-0 w-96 h-96 bg-primary-200 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-bounce-gentle"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-secondary-200 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-bounce-gentle" style="animation-delay: 1s;"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left animate-fade-in">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          <span class="text-primary-600">{t('hero.title')}</span>
          <br />
          <span class="text-secondary-600">{t('hero.subtitle')}</span>
        </h1>
        
        <p class="text-xl text-gray-600 mb-8 leading-relaxed">
          {t('hero.description')}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a 
            href="#ekyc" 
            class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            {t('hero.cta')}
          </a>
          
          <a 
            href="#benefits" 
            class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg border-2 border-primary-600 hover:bg-primary-50 transition-all duration-200"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            {t('benefits.title')}
          </a>
        </div>
        
        <!-- Trust indicators -->
        <div class="mt-12 flex items-center justify-center lg:justify-start space-x-8 text-sm text-gray-500">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span>सुरक्षित</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
            </svg>
            <span>जलद</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-purple-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>सत्यापित</span>
          </div>
        </div>
      </div>
      
      <!-- Illustration -->
      <div class="relative animate-slide-up">
        <div class="bg-white rounded-2xl shadow-2xl p-8 transform rotate-3 hover:rotate-0 transition-transform duration-300">
          <div class="space-y-4">
            <div class="h-4 bg-primary-200 rounded w-3/4"></div>
            <div class="h-4 bg-secondary-200 rounded w-1/2"></div>
            <div class="h-4 bg-primary-200 rounded w-5/6"></div>
            <div class="space-y-2 pt-4">
              <div class="h-8 bg-gray-100 rounded"></div>
              <div class="h-8 bg-gray-100 rounded"></div>
              <div class="h-8 bg-gray-100 rounded"></div>
            </div>
            <div class="h-10 bg-primary-600 rounded text-white flex items-center justify-center font-semibold">
              {t('form.submit')}
            </div>
          </div>
        </div>
        
        <!-- Floating elements -->
        <div class="absolute -top-4 -right-4 w-8 h-8 bg-primary-400 rounded-full animate-bounce"></div>
        <div class="absolute -bottom-4 -left-4 w-6 h-6 bg-secondary-400 rounded-full animate-bounce" style="animation-delay: 0.5s;"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(0,0,0,0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0,0,0,0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>

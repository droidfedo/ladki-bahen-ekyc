---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);
---

<section id="faq" class="py-20 bg-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {t('faq.title')}
      </h2>
      <div class="w-24 h-1 bg-primary-600 mx-auto rounded-full mb-6"></div>
      <p class="text-xl text-gray-600">
        योजनेबद्दल सर्वात सामान्य प्रश्न आणि त्यांची उत्तरे
      </p>
    </div>

    <div class="space-y-6">
      <!-- FAQ Item 1 -->
      <div class="faq-item bg-gray-50 rounded-2xl overflow-hidden">
        <button class="faq-question w-full px-8 py-6 text-left flex items-center justify-between hover:bg-gray-100 transition-colors">
          <span class="text-lg font-semibold text-gray-900">{t('faq.q1')}</span>
          <svg class="faq-icon w-6 h-6 text-primary-600 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div class="faq-answer hidden px-8 pb-6">
          <p class="text-gray-700 leading-relaxed">{t('faq.a1')}</p>
        </div>
      </div>

      <!-- FAQ Item 2 -->
      <div class="faq-item bg-gray-50 rounded-2xl overflow-hidden">
        <button class="faq-question w-full px-8 py-6 text-left flex items-center justify-between hover:bg-gray-100 transition-colors">
          <span class="text-lg font-semibold text-gray-900">{t('faq.q2')}</span>
          <svg class="faq-icon w-6 h-6 text-primary-600 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div class="faq-answer hidden px-8 pb-6">
          <p class="text-gray-700 leading-relaxed">{t('faq.a2')}</p>
        </div>
      </div>

      <!-- FAQ Item 3 -->
      <div class="faq-item bg-gray-50 rounded-2xl overflow-hidden">
        <button class="faq-question w-full px-8 py-6 text-left flex items-center justify-between hover:bg-gray-100 transition-colors">
          <span class="text-lg font-semibold text-gray-900">{t('faq.q3')}</span>
          <svg class="faq-icon w-6 h-6 text-primary-600 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div class="faq-answer hidden px-8 pb-6">
          <p class="text-gray-700 leading-relaxed">{t('faq.a3')}</p>
        </div>
      </div>

      <!-- FAQ Item 4 -->
      <div class="faq-item bg-gray-50 rounded-2xl overflow-hidden">
        <button class="faq-question w-full px-8 py-6 text-left flex items-center justify-between hover:bg-gray-100 transition-colors">
          <span class="text-lg font-semibold text-gray-900">{t('faq.q4')}</span>
          <svg class="faq-icon w-6 h-6 text-primary-600 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div class="faq-answer hidden px-8 pb-6">
          <p class="text-gray-700 leading-relaxed">{t('faq.a4')}</p>
        </div>
      </div>

      <!-- FAQ Item 5 -->
      <div class="faq-item bg-gray-50 rounded-2xl overflow-hidden">
        <button class="faq-question w-full px-8 py-6 text-left flex items-center justify-between hover:bg-gray-100 transition-colors">
          <span class="text-lg font-semibold text-gray-900">{t('faq.q5')}</span>
          <svg class="faq-icon w-6 h-6 text-primary-600 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div class="faq-answer hidden px-8 pb-6">
          <p class="text-gray-700 leading-relaxed">{t('faq.a5')}</p>
        </div>
      </div>

      <!-- Additional FAQs -->
      <div class="faq-item bg-gray-50 rounded-2xl overflow-hidden">
        <button class="faq-question w-full px-8 py-6 text-left flex items-center justify-between hover:bg-gray-100 transition-colors">
          <span class="text-lg font-semibold text-gray-900">
            {currentLang === 'mr' ? 'योजनेसाठी कोणत्या बँकेचे खाते आवश्यक आहे?' : 'Which bank account is required for the scheme?'}
          </span>
          <svg class="faq-icon w-6 h-6 text-primary-600 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div class="faq-answer hidden px-8 pb-6">
          <p class="text-gray-700 leading-relaxed">
            {currentLang === 'mr' 
              ? 'कोणत्याही राष्ट्रीयकृत बँकेचे किंवा सहकारी बँकेचे खाते वापरता येते. खाते आधार कार्डाशी जोडलेले असावे.' 
              : 'Any nationalized bank or cooperative bank account can be used. The account should be linked with Aadhar card.'
            }
          </p>
        </div>
      </div>

      <div class="faq-item bg-gray-50 rounded-2xl overflow-hidden">
        <button class="faq-question w-full px-8 py-6 text-left flex items-center justify-between hover:bg-gray-100 transition-colors">
          <span class="text-lg font-semibold text-gray-900">
            {currentLang === 'mr' ? 'अर्ज नाकारल्यास काय करावे?' : 'What to do if application is rejected?'}
          </span>
          <svg class="faq-icon w-6 h-6 text-primary-600 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div class="faq-answer hidden px-8 pb-6">
          <p class="text-gray-700 leading-relaxed">
            {currentLang === 'mr' 
              ? 'अर्ज नाकारल्यास कारण कळवले जाईल. योग्य कागदपत्रांसह पुन्हा अर्ज करू शकता किंवा हेल्पलाइनवर संपर्क साधू शकता.' 
              : 'If application is rejected, reason will be communicated. You can reapply with correct documents or contact helpline.'
            }
          </p>
        </div>
      </div>

      <div class="faq-item bg-gray-50 rounded-2xl overflow-hidden">
        <button class="faq-question w-full px-8 py-6 text-left flex items-center justify-between hover:bg-gray-100 transition-colors">
          <span class="text-lg font-semibold text-gray-900">
            {currentLang === 'mr' ? 'योजनेची स्थिती कशी तपासावी?' : 'How to check scheme status?'}
          </span>
          <svg class="faq-icon w-6 h-6 text-primary-600 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        <div class="faq-answer hidden px-8 pb-6">
          <p class="text-gray-700 leading-relaxed">
            {currentLang === 'mr' 
              ? 'आधार नंबर किंवा मोबाइल नंबर वापरून अधिकृत वेबसाइटवर स्थिती तपासू शकता. SMS द्वारे देखील अपडेट मिळते.' 
              : 'You can check status on official website using Aadhar number or mobile number. Updates are also sent via SMS.'
            }
          </p>
        </div>
      </div>
    </div>

    <!-- Contact for more help -->
    <div class="mt-16 text-center">
      <div class="bg-gradient-to-r from-primary-50 to-secondary-50 rounded-2xl p-8">
        <h3 class="text-xl font-bold text-gray-900 mb-4">
          {currentLang === 'mr' ? 'अजूनही प्रश्न आहेत?' : 'Still have questions?'}
        </h3>
        <p class="text-gray-600 mb-6">
          {currentLang === 'mr' 
            ? 'आमच्या हेल्पलाइन टीमशी संपर्क साधा किंवा जवळच्या सेवा केंद्रात भेट द्या' 
            : 'Contact our helpline team or visit nearest service center'
          }
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:1800-XXX-XXXX" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            {currentLang === 'mr' ? 'हेल्पलाइन कॉल करा' : 'Call Helpline'}
          </a>
          <a href="mailto:support@ladkibahin.gov.in" class="inline-flex items-center px-6 py-3 bg-white text-primary-600 font-semibold rounded-lg border-2 border-primary-600 hover:bg-primary-50 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            {currentLang === 'mr' ? 'ईमेल पाठवा' : 'Send Email'}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const faqItems = document.querySelectorAll('.faq-item');
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question');
      const answer = item.querySelector('.faq-answer');
      const icon = item.querySelector('.faq-icon');
      
      question?.addEventListener('click', () => {
        const isOpen = !answer?.classList.contains('hidden');
        
        // Close all other FAQs
        faqItems.forEach(otherItem => {
          const otherAnswer = otherItem.querySelector('.faq-answer');
          const otherIcon = otherItem.querySelector('.faq-icon');
          otherAnswer?.classList.add('hidden');
          otherIcon?.classList.remove('rotate-180');
        });
        
        // Toggle current FAQ
        if (isOpen) {
          answer?.classList.add('hidden');
          icon?.classList.remove('rotate-180');
        } else {
          answer?.classList.remove('hidden');
          icon?.classList.add('rotate-180');
        }
      });
    });
  });
</script>
